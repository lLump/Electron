<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="buttonSignUp" parent="Widget.AppCompat.Button">
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:padding">13dp</item>
        <item name="android:background">@drawable/button_sign_up</item>
    </style>

    <style name="buttonSignIn" parent="Widget.AppCompat.Button">
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@drawable/button_sign_in</item>

    </style>

    <style name="datePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/main_color</item>
    </style>

    <style name="SheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <!--<item name="android:windowCloseOnTouchOutside">false</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">     @android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>
</resources>